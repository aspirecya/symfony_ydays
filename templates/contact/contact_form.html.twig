{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/registration_form.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/styles.css') }}">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="register-photo">
        <div class="form-container">
            <div class="image-holder"></div>
            {{ form_start(ContactForm) }}
                <h2 class="text-center"><strong>Contact</strong></h2></br>
                <div class="form-group">{{ form_row(ContactForm.nom, {'attr': {'placeholder': 'Nom'}}) }}</div>
                <div class="form-group">{{ form_row(ContactForm.prenom, {'attr': {'placeholder': 'Prenom'}}) }}</div>
                <div class="form-group">{{ form_row(ContactForm.email, {'attr': {'placeholder': 'E-mail'}}) }}</div>
                </br>
                <div class="form-group">{{ form_row(ContactForm.message) }}</div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Enregistrer</button></div>
            {{ form_end(ContactForm) }}
        </div>
    </div>
{% endblock %}
