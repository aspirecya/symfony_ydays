{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des salles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <script src="{{ asset('js/chart.min.js') }}"></script>
    <script src="{{ asset('js/bs-init.js') }}"></script>
    <script src="{{ asset('js/theme.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Gestion des salles LokiSalle</h3>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Salles</p>
                        </div>
                        <div class="card-body">
                            <a href="{{ path('admin_salle_create') }}" class="btn btn-primary btn-xs pull-right mb-4"><b>+</b> Créer une salle</a>
                            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                <table class="table dataTable my-0" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th><strong>ID</strong></th>
                                            <th><strong>Titre</strong></th>
                                            <th><strong>Description</strong></th>
                                            <th><strong>Pays</strong></th>
                                            <th><strong>Ville</strong></th>
                                            <th><strong>Adresse</strong></th>
                                            <th><strong>Code postal</strong></th>
                                            <th><strong>Capacité</strong></th>
                                            <th><strong>Catégorie</strong></th>
                                            <th class="text-center"><strong>Action</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for salle in salles %}
                                            <tr>
                                                <td>{{ salle.id }}</td>
                                                <td>{{ salle.titre }}</td>
                                                <td>{{ salle.description | slice(0, 40) }}</td>
                                                <td>{{ salle.pays }}</td>
                                                <td>{{ salle.ville }}</td>
                                                <td>{{ salle.adresse }}</td>
                                                <td>{{ salle.cp }}</td>
                                                <td>{{ salle.capacite }}</td>
                                                <td>{{ salle.categorie }}</td>
                                                <td class="text-center"><a class='btn btn-info btn-xs' href="{{ path('admin_salle_edit', { id: salle.id }) }}"><i class="far fa-edit"></i> Edit</a> <a href="{{ path('admin_salle_delete', { id: salle.id }) }}" class="btn btn-danger btn-xs"><i class="far fa-trash-alt"></i> Del</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th><strong>ID</strong></th>
                                            <th><strong>Titre</strong></th>
                                            <th><strong>Description</strong></th>
                                            <th><strong>Pays</strong></th>
                                            <th><strong>Ville</strong></th>
                                            <th><strong>Adresse</strong></th>
                                            <th><strong>Code postal</strong></th>
                                            <th><strong>Capacité</strong></th>
                                            <th><strong>Catégorie</strong></th>
                                            <th class="text-center"><strong>Action</strong></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}